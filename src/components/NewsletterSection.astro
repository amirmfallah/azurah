<section class="flex items-center justify-center px-4 md:px-8 py-16 md:py-32">
  <div class="w-full max-w-[2000px] border border-white border-opacity-30 p-8 md:p-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 md:gap-20">
      <!-- Left: Headline -->
      <div>
        <h2 class="text-3xl md:text-5xl font-black tracking-tight mb-6 md:mb-8 leading-tight">
          Join Azurah Frequency Monthly to get exclusive access to releases and events
        </h2>
        <p class="text-xs md:text-sm tracking-wide opacity-70 normal-case">
          Let us know what city and country you are in so we can make sure you hear about events near you.
        </p>
      </div>

      <!-- Right: Form -->
      <div>
        <form class="space-y-8">
          <!-- Email -->
          <div>
            <label for="email" class="text-xs tracking-widest opacity-70 block mb-3">Email Address *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- First Name -->
          <div>
            <label for="firstName" class="text-xs tracking-widest opacity-70 block mb-3">First Name</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- City -->
          <div>
            <label for="city" class="text-xs tracking-widest opacity-70 block mb-3">City</label>
            <input
              type="text"
              id="city"
              name="city"
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- Country -->
          <div>
            <label for="country" class="text-xs tracking-widest opacity-70 block mb-3">Country</label>
            <input
              type="text"
              id="country"
              name="country"
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full border border-white py-4 px-8 text-xs tracking-widest hover:bg-white hover:text-black transition-colors duration-300"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
