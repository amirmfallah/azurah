<section class="flex items-center justify-center px-4 md:px-8 pt-20 md:pt-32 pb-20 md:pb-32">
  <div class="w-full max-w-[2000px]">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 md:gap-20">
      <!-- Left: Headline -->
      <div>
        <h2 class="text-2xl md:text-4xl tracking-tight max-w-4xl leading-tight font-normal">
          Join Azurah Frequency Monthly to get exclusive access to releases and events
        </h2>
      </div>

      <!-- Right: Form -->
      <div>
        <form class="space-y-8">
          <!-- Email -->
          <div>
            <label for="email" class="text-xs tracking-widest opacity-70 block mb-3">Email Address *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- First Name -->
          <div>
            <label for="firstName" class="text-xs tracking-widest opacity-70 block mb-3">First Name</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- City -->
          <div>
            <label for="city" class="text-xs tracking-widest opacity-70 block mb-3">City</label>
            <input
              type="text"
              id="city"
              name="city"
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- Country -->
          <div>
            <label for="country" class="text-xs tracking-widest opacity-70 block mb-3">Country</label>
            <input
              type="text"
              id="country"
              name="country"
              class="w-full bg-transparent border-b border-white border-opacity-50 focus:border-opacity-100 outline-none py-2 text-base md:text-lg transition-all"
              placeholder=""
            />
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full border border-white py-4 px-8 text-xs tracking-widest hover:bg-white hover:text-black transition-colors duration-300 uppercase"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
