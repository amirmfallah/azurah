---
import { artists } from "../data/artists";
---

<section id="artists" class="flex items-center justify-center px-4 md:px-8 py-16 md:py-32">
  <div class="w-full max-w-[2000px]">
    <h2 class="section-title mb-12 md:mb-20">
      Our
      <br />
      Artists
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      {
        artists.map((artist) => (
          <a href={`/artists/${artist.id}`} class="group cursor-pointer">
            <div class="aspect-square bg-black mb-4 overflow-hidden">
              <img src={artist.image} alt={artist.name} class="w-full h-full object-cover opacity-50 group-hover:opacity-100 transition-opacity" />
            </div>
            <div class="text-xl md:text-2xl font-black tracking-tight">{artist.name}</div>
            <div class="text-xs md:text-sm tracking-wide mt-1 opacity-50">{artist.genres.join(' / ')}</div>
          </a>
        ))
      }
    </div>
  </div>
</section>
