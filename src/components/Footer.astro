---
import { siteConfig } from "../data/config";
const currentYear = new Date().getFullYear();
---

<footer class="px-4 md:px-8 py-12 md:py-16 bg-neutral-800">
  <div class="max-w-[2000px] mx-auto">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 mb-10 md:mb-14">
      <!-- Navigation Column 1 -->
      <div class="flex flex-col gap-4 md:gap-6">
        <a href="/releases" class="text-2xl md:text-4xl font-black tracking-tight hover:underline">Releases</a>
        <a href="/artists" class="text-2xl md:text-4xl font-black tracking-tight hover:underline">Artists</a>
      </div>

      <!-- Navigation Column 2 -->
      <div class="flex flex-col gap-4 md:gap-6">
        <a href="/#contact" class="text-2xl md:text-4xl font-black tracking-tight hover:underline">Contact</a>
      </div>

      <!-- Spacer on mobile, social on desktop -->
      <div class="hidden md:block"></div>

      <!-- Social Links -->
      <div class="col-span-2 md:col-span-1 flex flex-col gap-3 md:gap-4 text-xs md:text-sm tracking-widest">
        {siteConfig.socialLinks.map((social) => (
          <a href={social.url} class="hover:underline" target="_blank" rel="noopener noreferrer">+ {social.name}</a>
        ))}
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 text-xs tracking-wide opacity-50"
    >
      <div class="flex items-center gap-4">
        <span class="text-lg">+</span>
        <span>Â© {siteConfig.siteName} {currentYear}</span>
      </div>
    </div>
  </div>
</footer>
