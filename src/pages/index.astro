---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="min-h-screen uppercase bg-black text-white">
    <!-- Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 px-4 md:px-8 py-4 md:py-6 flex justify-between items-center mix-blend-difference"
    >
      <div class="text-xs md:text-sm tracking-widest">Azurah Frequency</div>
      <div class="flex gap-3 md:gap-8 text-xs md:text-sm tracking-wider">
        <a href="#releases" class="hover:underline">Releases</a>
        <a href="#artists" class="hover:underline">Artists</a>
        <a href="#contact" class="hover:underline">Contact</a>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="flex items-center justify-center px-4 md:px-8 pt-32 md:pt-40 pb-8 md:pb-12">
      <div class="w-full max-w-[2000px]">
        <!-- Main Statement -->
        <h1 class="hero-text mb-12 md:mb-16">
          Sound from
          <br />
          the past
          <br />
          for the future
        </h1>

        <!-- Divider & Info -->
        <div class="border-t border-white opacity-20 mb-6 md:mb-8"></div>
        <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-2 md:gap-0">
          <p class="text-xs md:text-sm tracking-widest">Azurah Frequency</p>
          <p class="text-xs md:text-sm tracking-widest">Est. 2025</p>
        </div>
      </div>
    </section>

    <!-- Full Width Image -->
    <section class="w-full px-4 md:px-8">
      <div class="w-full aspect-video h-[500px] lg:h-[600px]">
        <img src="/hero.png" alt="Azurah Frequency" class="w-full h-full object-cover" />
      </div>
    </section>

    <!-- Releases Carousel Section -->
    <section id="releases" class="relative py-16 md:py-32">
      <div class="flex items-center gap-8 md:gap-12">
        <!-- Vertical "RELEASES" Text -->
        <div class="hidden md:block pl-4 md:pl-8">
          <h2 class="vertical-text text-6xl md:text-8xl font-black tracking-tight opacity-20">Releases</h2>
        </div>

        <!-- Carousel Container -->
        <div class="flex-1 overflow-hidden">
          <!-- View All -->
          <div class="px-4 md:px-0 mb-8">
            <a href="#" class="text-xs tracking-widest hover:underline opacity-60">View All</a>
          </div>

          <!-- Carousel Scroll -->
          <div
            class="carousel-scroll flex gap-6 overflow-x-auto pb-8 px-4 md:px-0 pr-4 md:pr-8"
            style="scroll-behavior: smooth;"
          >
            <!-- Release Card 1 -->
            <div class="carousel-card shrink-0 w-72 md:w-80">
              <div class="aspect-square bg-black border border-white mb-4 overflow-hidden">
                <img src="/release-1.jpg" alt="Release 1" class="w-full h-full object-cover" />
              </div>
              <h3 class="text-lg md:text-xl font-black mb-1 tracking-tight">Unknown Artist - Dizzy</h3>
              <p class="text-xs opacity-50 mb-4 tracking-wide">Various Artists</p>
              <a href="#" class="text-xs tracking-widest hover:underline">+ View</a>
            </div>

            <!-- Release Card 2 -->
            <div class="carousel-card shrink-0 w-72 md:w-80">
              <div class="aspect-square bg-black border border-white mb-4 overflow-hidden">
                <img src="/release-2.jpg" alt="Release 2" class="w-full h-full object-cover" />
              </div>
              <h3 class="text-lg md:text-xl font-black mb-1 tracking-tight">Bart Skils - Sakura</h3>
              <p class="text-xs opacity-50 mb-4 tracking-wide">Various Artists</p>
              <a href="#" class="text-xs tracking-widest hover:underline">+ View</a>
            </div>

            <!-- Release Card 3 -->
            <div class="carousel-card shrink-0 w-72 md:w-80">
              <div class="aspect-square bg-black border border-white mb-4 overflow-hidden">
                <img src="/release-3.jpg" alt="Release 3" class="w-full h-full object-cover" />
              </div>
              <h3 class="text-lg md:text-xl font-black mb-1 tracking-tight">Lift Me Up</h3>
              <p class="text-xs opacity-50 mb-4 tracking-wide">Various Artists</p>
              <a href="#" class="text-xs tracking-widest hover:underline">+ View</a>
            </div>

            <!-- Release Card 4 -->
            <div class="carousel-card shrink-0 w-72 md:w-80">
              <div class="aspect-square bg-black border border-white mb-4 overflow-hidden">
                <img src="/release-4.jpg" alt="Release 4" class="w-full h-full object-cover" />
              </div>
              <h3 class="text-lg md:text-xl font-black mb-1 tracking-tight">Build to Destroy</h3>
              <p class="text-xs opacity-50 mb-4 tracking-wide">Metod Hristov</p>
              <a href="#" class="text-xs tracking-widest hover:underline">+ View</a>
            </div>

            <!-- Release Card 5 -->
            <div class="carousel-card shrink-0 w-72 md:w-80">
              <div class="aspect-square bg-black border border-white mb-4 overflow-hidden">
                <img src="/release-5.jpg" alt="Release 5" class="w-full h-full object-cover" />
              </div>
              <h3 class="text-lg md:text-xl font-black mb-1 tracking-tight">Always</h3>
              <p class="text-xs opacity-50 mb-4 tracking-wide">Various Artists</p>
              <a href="#" class="text-xs tracking-widest hover:underline">+ View</a>
            </div>
          </div>

          <!-- Navigation -->
          <div class="flex justify-between items-center px-4 md:px-0 pr-4 md:pr-8 mt-4">
            <button class="carousel-prev text-xs tracking-widest hover:underline opacity-60">Previous</button>
            <button class="carousel-next text-xs tracking-widest hover:underline opacity-60">Next</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Artists Section -->
    <section id="artists" class="flex items-center justify-center px-4 md:px-8 py-16 md:py-32">
      <div class="w-full max-w-[2000px]">
        <h2 class="section-title mb-12 md:mb-20">
          Our
          <br />
          Artists
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
          {
            [1, 2, 3, 4, 5, 6].map((i) => (
              <div class="group cursor-pointer">
                <div class="aspect-square bg-black border border-white mb-4 opacity-50 group-hover:opacity-100 transition-opacity" />
                <div class="text-xl md:text-2xl font-black tracking-tight">Artist {i}</div>
                <div class="text-xs md:text-sm tracking-wide mt-1 opacity-50">Techno / House</div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="flex items-center justify-center px-4 md:px-8 py-16 md:py-32">
      <div class="w-full max-w-[2000px]">
        <h2 class="section-title mb-12 md:mb-20">
          Get in
          <br />
          Touch
        </h2>
        <div>
          <a
            href="mailto:info@azurah.com"
            class="text-2xl md:text-7xl font-black hover:underline tracking-tight block mb-8 break-all"
          >
            info@azurah.com
          </a>
          <div class="flex flex-wrap gap-6 md:gap-12 text-xs md:text-sm tracking-widest mt-8 md:mt-16">
            <a href="#" class="hover:underline">Instagram</a>
            <a href="#" class="hover:underline">Soundcloud</a>
            <a href="#" class="hover:underline">Spotify</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="px-4 md:px-8 py-8 md:py-12 border-t border-white opacity-30">
      <div
        class="flex flex-col md:flex-row md:justify-between md:items-center gap-2 md:gap-0 text-xs md:text-sm max-w-[2000px] mx-auto"
      >
        <div>Â© 2025 Azurah Frequency</div>
        <div class="tracking-widest">All rights reserved</div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .hero-text {
    font-family: "Inter", sans-serif;
    font-size: clamp(3.5rem, 11vw, 9rem);
    font-weight: 900;
    line-height: 0.9;
    letter-spacing: -0.05em;
  }

  .section-title {
    font-family: "Inter", sans-serif;
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 900;
    line-height: 0.85;
    letter-spacing: -0.05em;
  }

  .vertical-text {
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }

  .carousel-scroll {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .carousel-scroll::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  // Carousel navigation
  const carouselScroll = document.querySelector(".carousel-scroll");
  const prevBtn = document.querySelector(".carousel-prev");
  const nextBtn = document.querySelector(".carousel-next");

  if (carouselScroll && prevBtn && nextBtn) {
    const scrollAmount = 320; // Card width + gap

    prevBtn.addEventListener("click", () => {
      carouselScroll.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    nextBtn.addEventListener("click", () => {
      carouselScroll.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });
  }
</script>
